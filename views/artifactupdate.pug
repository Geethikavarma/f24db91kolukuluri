extends layout

block content
  h1= title
  - let artifactId = toShow._id
  - let name = toShow.name
  - let origin = toShow.origin
  - let age = toShow.age

  div.row(class='mb-2')
    div.mr-1 ID:
    div #{artifactId}

  - let actionid = "/resource/artifacts/" + artifactId
  form(id='ArtifactForm', action=actionid, method="PUT")
    div.form-group
      label(for='name') Artifact Name
      input#name(type='text', name='name', value=name)

    div.form-group
      label(for='origin') Origin
      input#origin(type='text', name='origin', value=origin)

    div.form-group
      label(for='age') Age (in years)
      input#age(type='number', name='age', value=age)

    input(type="submit", value="Update")

  script.
    document.forms['ArtifactForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      fetch(event.target.action, {
        method: 'PUT',
        body: new URLSearchParams(new FormData(event.target))
      })
      .then((resp) => resp.json())
      .then((body) => {
        alert("Update succeeded");
        window.location.href = '/artifacts';
      })
      .catch((error) => {
        alert("Update failed: " + error);
      });
    });
