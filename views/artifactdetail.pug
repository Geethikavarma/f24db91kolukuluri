extends layout

block content
  h1= title

  pre= JSON.stringify(artifact, null, 2) <!-- Display the entire artifact object -->

  .container
    .row
      .col-md-4.font-weight-bold Artifact ID:
      .col-md-8.artifactAttr #{artifact._id}
    .row
      .col-md-4.font-weight-bold Artifact Type:
      .col-md-8.artifactAttr #{artifact.artifact_type}
    .row
      .col-md-4.font-weight-bold Origin:
      .col-md-8.artifactAttr #{artifact.origin}
    .row
      .col-md-4.font-weight-bold Age:
      .col-md-8.artifactAttr #{artifact.age} years
